<Window x:Class="MemoryMatchingGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryMatchingGame"
        mc:Ignorable="d"
        Title="Memory Matching Game" Height="450" Width="800">
    <Grid Name="MainGrid">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Welcome Message -->
            <TextBlock Name="WelcomeTextBlock" Text="Welcome to the Memory Matching Game!" FontSize="36" Margin="0,0,0,0" HorizontalAlignment="Center"/>
            <TextBlock Name="InstructionsTextBlock" Text="Test your memory by matching each card into pairs" FontSize="24" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <!-- Start Button -->
            <Button Name="StartButton" Content="Let's Play!" Height = "40" Width="200" Click="StartButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
